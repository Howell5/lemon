// tsconfig.base.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@server/*": ["server/src/*"],
      "@client/*": ["client/*"],
      "@shared/*": ["shared/*"]
    },
    "types": ["node"]
  },
  "exclude": ["**/node_modules", "**/dist"]
}
